<% provide(:title, 'New Message') %>
<h1>New Message</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@message) do |f| %>
      <%= render 'form', f: f %>
      <%= f.submit "Direct Message", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<%= link_to 'Back', messages_path %>
